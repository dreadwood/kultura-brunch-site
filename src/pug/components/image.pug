//- simple raster image
mixin picture(image, width, height, altText, className)
  - var path = image.split("@")[0];
  - var format = image.split(".")[1];
  picture
    source(type="image/webp"
      srcset=`${path}@1x.webp 1x, ${path}@2x.webp 2x`)
    img(class=className
      src=image
      srcset=`${path}@2x.${format} 2x`
      width=width
      height=height
      alt=altText ? altText : "")

//- simple vector image
mixin svg(name, width, height, className)
  svg(class=(className ? className : null) width=width height=height )
    use(xlink:href=`img/sprite${locals.suffixId}.svg#${name}`)

mixin image(path, width, height, altText)
  picture
    source(srcset=`${path}?as=avif` type="image/avif")
    source(srcset=`${path}?as=webp` type="image/webp")
    img(src=path width=width alt=altText)
