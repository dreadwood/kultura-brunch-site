include ./image

mixin card(event, opt = { isLink: true })
  a.card(class=(opt.isGray ? "card--gray" : null) href=(opt.isLink ? `event-${event.id}.pug` : null))
    .card__img.img-ratio
      +image(event.img, 460, null, `Афиша ${event.title}`)
    .card__content
      h3.card__title=event.title
      .card__price=(typeof event.full_price === "number" ? `${event.full_price.toLocaleString('ru')} AMD` : event.full_price )
